@using NtierArch.BLL.ModelVM.Role

@model RoleVM
<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center fw-bold  px-4 me-2">
            Add Role
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Create" asp-controller="Role" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="row g-4">
                    <div class="col-12">
                        <label asp-for="Name" class="form-label fw-semibold">
                             Name
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" type="text" placeholder="Enter Role Name" />
                        <span class="text-danger small" asp-validation-for="Name"></span>
                    </div>


                    <div class="col-12 d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-primary px-4 me-2">
                            Add Role
                        </button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
