@using NtierArch.BLL.ModelVM.Department

@model UpdateDepartmentVM

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white text-center fw-bold  px-4 me-2">
            Update Department
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Update" asp-controller="Department" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-semibold">Department Name</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter updated department name" />
                    <span class="text-danger small" asp-validation-for="Name"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Area" class="form-label fw-semibold">Area</label>
                    <input asp-for="Area" class="form-control form-control-lg" placeholder="Enter updated department area" />
                    <span class="text-danger small" asp-validation-for="Area"></span>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-primary px-4 me-2">
                        <i class="bi bi-pencil-square me-1"></i> Update Department
                    </button>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to Departments
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
