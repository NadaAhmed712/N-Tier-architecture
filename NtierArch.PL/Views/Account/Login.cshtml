@using NtierArch.BLL.ModelVM.Account

@model LoginEmployeeVM


<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center fw-bold  px-4 me-2">
            👤 Login
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Login" asp-controller="Account" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div class="row g-4">
                    <div class="col-12">
                        <label asp-for="UserName" class="form-label fw-semibold">
                            <i class="bi bi-person-fill me-1"></i> UserName
                        </label>
                        <input asp-for="UserName" class="form-control form-control-lg" type="text" placeholder="Enter employee UserName" />
                        <span class="text-danger small" asp-validation-for="UserName"></span>
                    </div>


                    <div class="col-12">
                        <label asp-for="Password" class="form-label fw-semibold">
                            Password
                        </label>
                        <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Enter employee Password" />
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>

                    <div class="col-12 d-flex justify-content-center gap-3 mt-4">
                        <button type="submit" class="btn btn-primary px-4 me-2">
                             Login
                        </button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
