@using NtierArch.BLL.ModelVM.Employee
@model Response<List<GetEmployeeVM>>
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-1" style="width: 100%;">
        <div class="card-body">
            <h2 class="text-center mb-4 text-capitalize fw-bold">Employee List</h2>
            <div class="container-fluid py-5">
                <div class="container py-5">
                    <div class="row g-5 align-items-center">
                        <div class="col-lg-12">
                            <div class="row g-0">
                                @if (Model.IsHaveError)
                                {
                                <div class="card-header bg-danger text-white text-center fw-bold fs-4 py-3">
                                    Oops! Something went wrong 😞
                                </div>

                                <div class="card-body bg-light p-4 text-center">
                                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                                    <h4 class="mt-3 text-danger">An unexpected error occurred.</h4>

                                    <p class="text-secondary mt-2">@Model.ErrorMessage</p>

                                    <div class="mt-4">
                                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">
                                            <i class="bi bi-house-door"></i> Back to Home
                                        </a>
                                    </div>
                                </div>
                                }
                                else
                                {
                                @foreach (var item in Model.Result)
                                {
                                <div class="col-md-4 col-lg-3 wow fadeIn" data-wow-delay="0.6s">
                                    <div class="service-item h-100 d-flex flex-column justify-content-center bg-light">
                                        <a asp-action="GetEmployee"
                                            asp-controller="Employee"
                                            asp-route-Id="@item.Id" class="service-img position-relative mb-4">
                                            <img class="img-fluid w-100" src="~/Files/@item.Image" alt="">
                                            <h3>@item.Name</h3>
                                        </a>
                                        <p class="mb-0">
                                                <p><b> ID:</b> @item.Id</p>
                                                <p><b>Age:</b> @item.Age</p>
                                                <p><b>Salary:</b> @item.Salary</p>
                                                <p><b>Department ID:</b> @item.DeptId</p>
                                            <div class="d-flex align-items-center mt-5">
                                                <a class="btn btn-primary px-4 me-2" asp-action="Update" asp-controller="Employee" asp-route-Id="@item.Id"> Update </a>
                                                <a class="btn btn-primary px-4 me-2" asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.Id"
                                                    onclick="return confirm('Are you sure you want to delete this employee?');">
                                                    Delete
                                                </a>
                                            </div>
                                        </p>
                                    </div>
                                </div>
                                }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>