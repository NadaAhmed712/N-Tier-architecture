@using NtierArch.BLL.ModelVM.Employee
@model Response<GetEmployeeVM>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-3" style="width: 70%;">
        <div class="card-body text-center">
            <h2 class="text-center mb-4 text-capitalize fw-bold">Employee Details</h2>

            @if (Model.IsHaveError)
            {
                <div class="card-header bg-danger text-white text-center fw-bold fs-4 py-3">
                    Oops! Something went wrong 😞
                </div>

                <div class="card-body bg-light p-4 text-center">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3 text-danger">An unexpected error occurred.</h4>

                    <p class="text-secondary mt-2">@Model.ErrorMessage</p>

                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">
                            <i class="bi bi-house-door"></i> Back to Home
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="container-fluid py-4">
                    <div class="row g-5 justify-content-center align-items-center">
                        <div class="col-lg-8">
                            <div class="service-item h-100 d-flex flex-column justify-content-center bg-light p-4 rounded-3">

                            <img class="img-fluid w-100" src="~/Files/@Model.Result.Image" alt="">

                            <div class="text-start ms-3">
                                <p><b> ID:</b> @Model.Result.Id</p>
                                <p><b>Name:</b> @Model.Result.Name</p>
                                <p><b>Age:</b> @Model.Result.Age</p>
                                <p><b>Salary:</b> @Model.Result.Salary</p>
                                    <p><b>Department ID:</b> @Model.Result.DeptId</p>
                                </div>

                                <div class="d-flex justify-content-center mt-4">
                                    <a class="btn btn-primary px-4 me-2" 
                                       asp-action="Update" asp-controller="Employee" asp-route-Id="@Model.Result.Id">
                                        Update
                                    </a>
                                    <a class="btn btn-danger px-4 me-2"
                                       asp-action="Delete" asp-controller="Employee" asp-route-Id="@Model.Result.Id"
                                       onclick="return confirm('Are you sure you want to delete this Employee?');">
                                        Delete
                                    </a>
                                    <a class="btn btn-outline-secondary px-4" asp-action="Index" asp-controller="Employee">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
